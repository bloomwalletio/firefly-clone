    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb) Debug backend Node.js bindings",
            "type": "lldb",
            "request": "attach",
            "program": "${workspaceRoot}/packages/desktop/public/build/index.node",
            "pid": "${command:pickMyProcess}",
            "sourceLanguages": ["rust"]
        },
        // Requires https://marketplace.visualstudio.com/items?itemName=mpotthoff.vscode-android-webview-debug
        {
            "type": "android-webview",
            "request": "attach",
            "name": "ðŸ”— Android",
            "application": "org.iota.firefly.mobile.shimmer.alpha",
        },
        // Requires https://marketplace.visualstudio.com/items?itemName=nisargjhaveri.ios-debug
        {
            "name": "â–¶ Simulator",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/packages/mobile/ios/App/DerivedData/App/Build/Products/Debug-iphonesimulator/App.app",
            "iosBundleId": "org.iota.firefly.mobile.shimmer.alpha",
            "iosTarget": "last-selected",
          },
          {
            "name": "ðŸ”— Simulator",
            "type": "lldb",
            "request": "attach",
            "program": "${workspaceFolder}/packages/mobile/ios/App/DerivedData/App/Build/Products/Debug-iphonesimulator/App.app",
            "iosBundleId": "org.iota.firefly.mobile.shimmer.alpha",
            "iosTarget": "last-selected",
          },
          {
            "name": "ðŸ”— IPhone",
            "type": "lldb",
            "request": "attach",
            "program": "${workspaceFolder}/packages/mobile/ios/App/DerivedData/App/Build/Products/Debug-iphoneos/App.app",
            "iosBundleId": "org.iota.firefly.mobile.shimmer.alpha",
          },
    ]
}
